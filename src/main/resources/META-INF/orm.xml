<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        version="2.0">

    <sql-result-set-mapping name="usuarioMapping">
        <constructor-result target-class="present.verb.dominio.hoja.model.Hoja">
            <column name="nombre"/>
            <column name="ultimo_indice_aprendido"/>
            <column name="repeticiones_alta_como_aprendido"/>
            <column name="numero_verbos_por_aprender_diario"/>
            <column name="ultima_fecha_aprendio"/>
            <column name="ultima_fecha_rutina"/>
            <column name="es_pregunta_respuesta"/>
            <column name="indice_excel"/>
            <column name="filas"/>
        </constructor-result>
    </sql-result-set-mapping>

    <named-native-query name="getHojasByExcelAndCorreo" result-set-mapping="usuarioMapping">
        <query>
            <![CDATA[
                SELECT
                h.nombre,
                h.ultimo_indice_aprendido,
                h.repeticiones_alta_como_aprendido,
                h.numero_verbos_por_aprender_diario,
                h.ultima_fecha_aprendio,
                h.ultima_fecha_rutina,
                h.es_pregunta_respuesta,
                h.indice_excel,
                h.filas
                FROM usuario u
                INNER JOIN excel e on (u.id = e.usuario_id)
                INNER JOIN hoja h on (e.id = h.excel_id)
                where e.nombre = ?1 and u.correo = ?2
            ]]>
        </query>
    </named-native-query>

</entity-mappings>
